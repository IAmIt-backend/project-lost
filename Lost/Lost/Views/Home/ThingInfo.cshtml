@using Microsoft.AspNet.Identity;
@using MongoDB.Bson;

@model Lost.ViewModel.IndexViewModel
@{
    ViewBag.Title = "Thing Info";
}
@using DB.Models;
<!DOCTYPE html>
<html>
<body style="background-color: beige; font-family: Verdana, Arial;">
    <form action="" method="post">
        <p>
            @Html.ActionLink("Return", "Index", "Home")
        </p>


        @{
            var UIGUI = User.Identity.GetUserId();
            if (Model.UserId != null && UIGUI != null && Model.UserId.Equals(new ObjectId(UIGUI)))
            {
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="status">Status of thing:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="status" name="status" value=@Model.Status>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="about">Title:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="about" name="about" value=@Model.About>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="description">Description:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="description" name="description" value=@Model.Description>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class = "col-md-2 control-label" for="place">Place, where this thing was @Model.Status</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="place" name="place" value=@Model.Place>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class = "col-md-2 control-label"></label><br>
                    <div class="col-md-10">
                        <input class="form-control" type="submit" name="deleteButton" id="deleteButton" value="Delete from list">
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class = "col-md-2 control-label"></label><br>
                    <div class="col-md-10">
                        <input class="form-control" type="submit" name="editButton" id="editButton" value="Edit">
                    </div>
                </div>

            }
            else
            {
                <div class="form-group">
                    <label class="col-md-2 control-label" for="status">Status of thing:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="status" name="status" cols="40" rows="3" value=@Model.Status disabled>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="about">Title:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="about" name="about" cols="40" rows="3" value=@Model.About disabled>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="description">Description:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="description" name="description" cols="40" rows="3" value=@Model.Description disabled>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="place">Place, where this thing was found or lost:</label><br>
                    <div class="col-md-10">
                        <input class="form-control" id="place" name="place" cols="40" rows="3" value=@Model.Place disabled>
                    </div>
                </div>
               
            }


        }


        @{
            if (User.Identity.IsAuthenticated)
            {

                @Html.ActionLink("View user page", "UserProfile", "Home", new { userId = Model.UserId }, null)  }          }
        @Html.ActionLink(" ", "ThingInfo", "Home", new { thingId = Model.ThingId }, null)
         <p>@Model.Text</p>

    </form>



</body>
</html>
