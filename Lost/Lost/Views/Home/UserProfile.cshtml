@model Lost.ViewModel.IndexViewModel
@using Microsoft.AspNet.Identity;
@using MongoDB.Bson;


@{
    ViewBag.Title = "User Profile";
}
@using DB.Models
<!DOCTYPE html>
<html>
<body style="background-color: beige; font-family: Verdana, Arial;">
    <form class="form-horizontal" action="" method="post">
        <p>@Model.Text</p>
        <p>
            @Html.ActionLink("< Return", "Index", "Home", new { thingId = Model.ThingId }, new { @class = "btn btn-default" })
        </p>
        @{
            var UIGUI = User.Identity.GetUserId();
            var isMy = Model.UserId != null && UIGUI != null && Model.UserId.Equals(new ObjectId(UIGUI));
            var strDisabledAttribute = !isMy ? "disabled" : "";

            <div class="form-group">
                <label class="col-md-2 control-label" for="fname">First name:</label>
                <div class="col-md-10">
                    <input class="form-control" id="fname" name="fname" value=@Model.UserName>
                </div>
            </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="lname">Last name:</label>
                    <div class="col-md-10">
                        <input class="form-control" id="lname" name="lname" value=@Model.LastName>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="email">Email:</label>
                    <div class="col-md-10">
                        <input class="form-control" id="email" name="email" value=@Model.Email>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="phone">Phone:</label>
                    <div class="col-md-10">
                        <input class="form-control" id="phone" name="phone" value=@Model.Phone>
                    </div>
                </div>
            if (isMy)
            {
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input class="form-control" type="submit" name="editButton" id="editButton" value="Edit">
                    </div>
                </div>

            }



        }




    </form>

</body>
</html>