@model Lost.ViewModel.IndexViewModel

@using DB.Models;
<!DOCTYPE html>
<html>
<body style="background-color: beige; font-family: Verdana, Arial;">
    <form action="" method="post">
        <p>
        @Html.ActionLink("Return", "Index", "Home")        
        </p>
          
    <p>
        <label >Lost...</label><br>
        @Html.RadioButton("status", ItemStates.Lost, true)<br>
        <label>...or Found?</label><br>
        @Html.RadioButton("status", ItemStates.Found, false)
  
     </p> 
         <p>
            <label for="place">Place:</label><br>
            <input id="place" name="place" cols="40" rows="3" required>
        </p>
        <p>
            <label for="about">Title:</label><br> @*title == about*@
            <input id="about" name="about" cols="40" rows="3" required>
        </p>
        <p>
            <label for="description">Description:</label><br>
            <input id="description" name="description" cols="40" rows="3" required>
        </p>
        <p>
          <input type="submit" name="submitButton" id="submitButton" value="AddThing">
        </p>
        <p>@Model.Text</p>
    </form>

</body>
</html>
